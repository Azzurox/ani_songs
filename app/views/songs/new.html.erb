
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@song) do |f| %>
		<%= render 'shared/error_messages' %>

	
      <%= f.label :name, "Nom" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :artist, "Artiste" %>
      <%= f.text_field :artist, class: 'form-control' %>

      <%= f.label :anime, "Anime" %>
      <%= f.text_field :anime, class: 'form-control' %>

      <%= f.label :nbre_vote, "Nombre de votes" %>
      <%= f.text_field :nbre_vote, class: 'form-control' %>
	  
	  <%= f.label :photo, "Image" %>
      <%= f.file_field :photo %>

      <%= f.submit "Ajouter chanson", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>